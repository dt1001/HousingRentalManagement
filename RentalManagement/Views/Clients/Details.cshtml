@model RentalManagement.Models.Client

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OccupancyRecords)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OccupancyRecords)
        </dd>

        @Html.LabelFor(model => model.OccupancyRecords, htmlAttributes: new { @class = "control-label col-md-2" })
        @foreach (var occ in Model.OccupancyRecords) {
            <table class="table table-bordered" style="margin:10px">
                <tr>
                    <th>Record ID</th>
                    <th>Client ID</th>
                    <th>Asset ID</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>

                <tr>
                    <td>@occ.Id</td>
                    <td>@occ.ClientId</td>
                    <td>@occ.AssetId</td>
                    <td>@occ.StartDate</td>
                    <td>@occ.EndDate</td>

                </tr>
            </table>
        }

        <dt>
            @Html.DisplayNameFor(model => model.HomeAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HomeAddress.StreetAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorkAddress.StreetAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorkAddress.StreetAddress)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
